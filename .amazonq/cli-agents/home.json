      "args": [
        "run",
        "github:utensils/mcp-nixos",
        "--"
      ],
      "env": {},
      "timeout": 120000,
      "disabled": false
    }
  },
  "tools": [
    "*"
  ],
  "toolAliases": {},
  "allowedTools": [],
  "resources": [
    "file://AmazonQ.md",
    "file://AGENTS.md",
    "file://README.md",
    "file://.amazonq/rules/**/*.md",
    "file://**/*.{nix,sh,md,json,jsonc,css}"
  ],
  "hooks": {},
  "toolsSettings": {},
  "useLegacyMcpJson": false,
  "model": null
